public class TransferTest {

	public static void main(String[] args) {
		Account accountPaulo = new Account();
		accountPaulo.deposit(50);
		accountPaulo.withdraw(20);
		
		Account accountMarcela = new Account();
		System.out.println("The balance is " + accountMarcela.getBalance());
		if(accountMarcela.transfer(300, accountPaulo)) {
			System.out.println("The trasnfer was a success.");
		} System.out.println("The trasnfer was NOT a success.");
		;
		System.out.println(accountPaulo.getBalance());
		System.out.println("The balance is " + accountMarcela.getBalance());		
	}
}
